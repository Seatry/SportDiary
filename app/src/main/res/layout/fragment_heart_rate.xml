<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_heart_rate">

    <TextView
        android:id="@+id/heartRateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/heart_rate"
        android:textAppearance="?android:textAppearanceLarge"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hrItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/heartRateTitle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelHr"
        android:text="@string/cancel"
        android:layout_toLeftOf="@id/okHr"
        android:layout_toStartOf="@id/okHr"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/okHr"
        android:text="@string/save"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>